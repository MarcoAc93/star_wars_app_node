<!DOCTYPE html>
<html lang="en">
<head>
	
	<% include parciales/head.ejs %>
	<title><%= titulo %></title>

</head>
<body>
	<% include parciales/header.ejs %>
	<div id="hero-image">
		<h1 id="hero-title"><%= titulo %></h1>
	</div>

	<div id="posters-wrapper" class="content-padding clearfix">
		<% for(var i = 0; i < movies.length; i++) { %>
			<div class="poster">
				<a href="/star_wars_episode/<%= i+1%>">
					<img src="/images/<%= movies[i].poster %>" class="img-responsive">
					<div class="poster-info-overlay">
						<h3><%= movies[i].title %></h3>
						<h4>View More <i class="fa fa-arrow-right"></i></h4>
					</div>
				</a>
			</div>
		<% } %>
	</div>
	<% include parciales/footer.ejs %>
	<% include parciales/scripts.ejs %>
</body>
</html>

















